{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Literature-based evidence strings",
  "description": "Schema for target-disease evidence extracted from the literature",
  "type": "object",
  "version": "1.2.8",
  "allOf": [
    {
      "$ref": "base.json"
    },
    {
      "properties": {
        "type": {
          "type" : "string",
          "enum": [
            "genetic_literature",
            "affected_pathway",
            "somatic_mutation"
          ]
        },
        "evidence": {
          "type": "object",
          "$ref": "evidence/literature_curated.json"
        }
      }
    }
  ],
  "properties": {
    "type": {},
    "sourceID": {},
    "unique_association_fields": {},
    "access_level" :{},
    "target": {},
    "disease": {},
    "literature": {},	
    "evidence": {}
  },
  "required": [
    "type",
    "sourceID",
    "access_level",
    "unique_association_fields",
    "target",
    "disease",
    "evidence"
  ]
}
