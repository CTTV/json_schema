{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Target-Disease-Association",
  "description": "Schema for different types of target-disease associations used by CTTV",
  "type": "object",
  "version": "1.2",
  "properties": {
    "sourceID": {
      "type": "string",
      "description": "A source ID (database or study ID) to help identify who this data is from."
    },
    "validated_against_schema_version": {
      "description": "The CTTV-JSON schema version number against which your data was validated",
      "type": "string",
      "enum": [
        "1.1",
        "1.2"
      ]
    },
    "unique_association_fields": {
      "description": "String based key-value properties that must uniquely identify each JSON object in your data.",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "evidence_chain": {
      "description": "A valid CTTV evidence chain schema - please choose from one of the evidence chain schemas below",
      "oneOf": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/drug.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/expression.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/genetics_no_snp.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/genetics_via_snp.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/phenotype.json"
        },
        {
          "description": "A generic target-evidence-disease model e.g. the first draft COSMIC data",
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/root.json"
        }
      ]
    }
  },
  "required": [
    "sourceID",
    "validated_against_schema_version",
    "unique_association_fields",
    "evidence_chain"
  ],
  "additionalProperties": false,
  "remote_schemas": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/bioentities.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/root.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/generic.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/root.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/disease.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/drug.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/phenotype.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/snp.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/target.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/drug/clinical.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/drug/moa.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/expression.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/genetics/gwas.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/genetics/snp.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/phenotype/pheno2disease.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/phenotype/pheno2pheno.json"
    },
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/phenotype/target2pheno.json"
    }
  ]
}