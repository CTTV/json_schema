{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Drug-based evidence strings",
  "description": "Schema for target-disease evidence where there is drug knowledge",
  "type": "object",
  "version": "1.2.1",
  "allOf": [
    {
      "$ref": "base.json"
    },
    {
      "properties": {
        "type": {
          "type" : "string",
          "enum": [
            "known_drug"
          ]
        },
        "drug": {
          "type": "object",
          "$ref": "bioentity/drug.json"
        },
        "evidence": {
          "type": "object",
          "properties": {
            "target2drug": {
              "type": "object",
              "$ref": "evidence/drug/target2drug.json"
            },
            "drug2clinic": {
              "type": "object",
              "$ref": "evidence/drug/drug2clinic.json"
            },
            "association_score": {
              "type" : "object",
              "oneOf": [
                {
                  "$ref": "evidence/association_score/pvalue.json"
                },
                {
                  "$ref": "evidence/association_score/probability.json"
                },
                {
                  "$ref": "evidence/association_score/rank.json"
                },
                {
                  "$ref": "evidence/association_score/summed_total.json"
                }
              ]
            }
          },
          "required": [
            "target2drug",
            "drug2clinic",
            "association_score"
          ],
          "additionalProperties": false
        }
      }
    }
  ],
  "properties": {
    "type": {},
    "sourceID": {},
    "validated_against_schema_version": {},
    "unique_association_fields": {},
    "target": {},
    "disease": {},
    "access_level" :{},
    "evidence": {},
    "drug": {}
  },
  "required": [
    "type",
    "access_level",
    "sourceID",
    "validated_against_schema_version",
    "unique_association_fields",
    "target",
    "drug",
    "disease",
    "evidence"
  ],
  "additionalProperties": false
}
