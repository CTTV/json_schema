{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "CTTV target",
    "description": "CTTV target model. Target includes bioentities like proteins, genes, protein complexes etc.",
    "type": "object",
    "version": "1.2",
    "properties": {
        "about": {
            "allOf": [
                {
                    "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/root.json"
                },
                {
                    "properties": {
                        "items": {
                            "description": "An array of ensembl or uniprot identifiers",
                            "pattern": "^http://identifiers.org/ensembl/ENSG[0-9]{4,}|http://identifiers.org/uniprot/.{4,}$"
                        }
                    },
                    "required": [
                        "items"
                    ]
                }
            ]
        }
    },
    "required": [
        "about"
    ],
    "additionalProperties": false
}