{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Drug",
  "description": "CTTV drug model",
  "type": "object",
  "version": "1.2",
  "properties": {
    "id": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/base.json"
        }
      ],
      "items": {
        "description": "An array of drug identifiers",
        "pattern": "^http://identifiers.org/chembl.compound/CHEMBL[0-9]+$"
      }
    },
    "molecule_name": {
      "type": "string"
    },
    "molecule_type": {
      "type": "string"
    },
    "mechanism_of_action": {
      "type": "string"
    },
    "target_class": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "action_type": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "molecule_name",
    "mechanism_of_action",
    "target_class",
    "action_type"
  ],
  "additionalProperties": false
}