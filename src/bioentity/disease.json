{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CTTV disease",
  "description": "CTTV disease. This uses the EFO ontology",
  "type": "object",
  "version": "1.2",
  "properties": {
    "id": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/base.json"
        }
      ],
      "items": {
        "description": "An array of 1 valid EFO ID",
        "pattern": "^http://www.orpha.net/ORDO/Orphanet_[0-9]{1,}|http://purl.obolibrary.org/obo/DOID_[0-9]{2,}|http://www.ebi.ac.uk/efo/EFO_[0-9]{4,}|http://purl.obolibrary.org/obo/HP_[0-9]{4,}$"
      },
      "minItems": 1,
      "maxItems": 1
    },
    "name": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/base.json"
        }
      ],
      "items": {
        "description": "Optional - EFO disease name corresponding to the EFO ID"
      },
      "minItems": 1,
      "maxItems": 1
    },
    "biosample": {
      "description": "Tissue names - provide EFO name if you have this",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "free text of the tissue / cell name"
        },
        "id": {
          "type": "string",
          "format": "uri",
          "description": "EFO ID of the tissue - optional"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "id"
  ],
  "additionalProperties": false
}