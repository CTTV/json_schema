{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "pheno_disease_evidence",
  "description": "Evidence linking phenotype to disease",
  "type": "object",
  "version": "1.2.1",
  "allOf": [
    {
      "$ref": "evidence/base.json"
    },
    {
      "properties": {
        "evidence_codes": {
          "type": "array",
          "description": "An array of evidence codes",
          "items": {
            "type": "string",
            "enum": [
              "http://purl.obolibrary.org/obo/ECO_0000057",
              "http://purl.obolibrary.org/obo/ECO_0000205"
            ]
          },
          "minItems": 1
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "evidence/linkout/linkout.json"
          }
        }
      }
    }
  ],
  "properties": {
    "association_score": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {},
    "urls": {}
  },
  "required": [
    "association_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes"
  ],
  "additionalProperties": false
}