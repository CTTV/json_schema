{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Evidence_Base",
  "description": "Base schema for CTTV evidence",
  "version": "1.2",
  "type": "object",
  "properties": {
    "is_associated": {
      "type": "boolean"
    },
    "date_asserted": {
      "type": "string",
      "format": "date-time"
    },
    "association_score": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/pvalue"
        },
        {
          "$ref": "#/definitions/probability"
        },
        {
          "$ref": "#/definitions/rank"
        }
      ]
    },
    "provenance_type": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/expert"
          },
          {
            "$ref": "#/definitions/literature"
          },
          {
            "$ref": "#/definitions/database"
          }
        ]
      }
    }
  },
    "definitions": {
      "method": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "reference": {
            "type": "string"
          }
        },
        "required": [
          "description"
        ],
        "additionalProperties": false
      },
      "pvalue": {
        "type": "object",
        "properties": {
          "pvalue": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "method": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": [
              "value",
              "method"
            ]
          }
        },
        "required": [
          "pvalue"
        ],
        "additionalProperties": false
      },
      "probability": {
        "type": "object",
        "properties": {
          "probability": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "method": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": [
              "value",
              "method"
            ]
          }
        },
        "required": [
          "probability"
        ],
        "additionalProperties": false
      },
      "rank": {
        "type": "object",
        "properties": {
          "rank": {
            "type": "object",
            "properties": {
              "rank_position": {
                "type": "number",
                "minimum": 1
              },
              "sample_size": {
                "type": "number",
                "minimum": 1
              },
              "method": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": [
              "rank_position",
              "sample_size",
              "method"
            ]
          }
        },
        "required": [
          "rank"
        ],
        "additionalProperties": false
      },
      "expert": {
        "type": "object",
        "properties": {
          "expert": {
            "type": "object",
            "properties": {
              "statement": {
                "type": "string"
              },
              "author": {
                "type": "object",
                "properties": {
                  "organization": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              },
              "status": {
                "type": "boolean"
              }
            },
            "required": [
              "status"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "expert"
        ],
        "additionalProperties": false
      },
      "literature": {
        "type": "object",
        "properties": {
          "literature": {
            "type": "object",
            "properties": {
              "lit_refs": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "http://identifiers.org/pubmed/[0-9]+|http://europepmc.org/articles/PMC[0-9]{4,}$",
                  "minItems": 1,
                  "uniqueItems": true
                }
              },
              "extracted_sentences": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minItems": 1
                }
              }
            },
            "required": [
              "lit_refs"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "literature"
        ],
        "additionalProperties": false
      },
      "database": {
        "type": "object",
        "properties": {
          "database": {
            "type": "object",
            "properties": {
              "dbxref": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Please provide the original DB name"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "Please provide a pointer to the original resource: e.g. http://identifiers.org/orphanet/93298"
                  },
                  "version": {
                    "type": "string"
                  }
                },
                "additionalProperties": false,
                "required": [
                  "id",
                  "version"
                ]
              },
              "id": {
                "type": "string"
              },
              "version": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": [
              "id",
              "version"
            ]
          }
        },
        "required": [
          "database"
        ],
        "additionalProperties": false
      },
      "linkout": {
        "type": "object",
        "properties": {
          "nice_name": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false,
        "required": [
          "nice_name",
          "url"
        ]
      }
    }
  }