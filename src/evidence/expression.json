{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "expression_evidence",
  "description": "Expression evidence linking gene/protein to disease",
  "type": "object",
  "version": "1.2",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/root.json"
    }
  ],
  "properties": {
    "evidence_codes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "http://purl.obolibrary.org/obo/ECO_0000356",
          "http://purl.obolibrary.org/obo/ECO_0000357",
          "http://purl.obolibrary.org/obo/ECO_0000358",
          "http://purl.obolibrary.org/obo/ECO_0000359",
          "http://purl.obolibrary.org/obo/ECO_0000205"
        ]
      }
    },
    "comparison_name": {
      "type": "string"
    },
    "log2_fold_change": {
      "type": "number"
    },
    "experiment_overview": {
      "type": "string"
    }
  },
  "required": [
    "evidence_codes",
    "comparison_name",
    "log2_fold_change",
    "experiment_overview"    
  ],
  "additionalProperties": false
}