{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "drug_disease_clinical_evidence",
  "description": "Evidence linking drug to disease in a clinical trial",
  "type": "object",
  "version": "1.2",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/root.json"
    }
  ],
  "properties": {
    "evidence_codes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
            "http://identifiers.org/eco/drug_disease",
            "http://identifiers.org/eco/ECO:0000205"
        ]
      }
    }
  },
  "additionalProperties": false
}