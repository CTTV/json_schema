{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "drug_disease_clinical_evidence",
  "description": "Evidence linking drug to disease in a clinical trial",
  "type": "object",
  "version": "1.2",
  "properties": {
    "allOf": {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/base.json"
    },
    "association_score": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {
      "type": "array",
      "description": "An array of evidence codes",
      "items": {
        "type": "string",
        "enum": [
            "http://identifiers.org/eco/drug_disease",
            "http://purl.obolibrary.org/obo/ECO_0000205"
        ]
      },
      "minItems": 1
    }
  },
  "patternProperties": {
    "^preferred_hyperlink_[1-9]$": {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/linkout.json"
    }
  },
  "required": [
    "association_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes"
  ],
  "additionalProperties": false
}