{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "drug_disease_clinical_evidence",
  "description": "Evidence linking drug to disease in a clinical trial",
  "type": "object",
  "version": "1.2.8",
  "allOf": [
    {
      "$ref": "../base.json"
    },
    {
      "properties": {
        "evidence_codes": {
          "type": "array",
          "description": "An array of evidence codes",
          "items": {
            "type": "string",
            "enum": [
              "http://identifiers.org/eco/drug_disease",
              "http://purl.obolibrary.org/obo/ECO_0000205"
            ]
          },
          "minItems": 1
        },
        "max_phase_for_disease": {
          "type" : "object",
          "$ref" : "diseasephase.json"
        },
        "urls": {
          "type": "array",
          "items": {
            "type" : "object",
            "$ref": "../linkout.json"
          }
        },
		
        "status": {
          "type" : "string"
        }	
		
      }
    }
  ],
  "properties": {
    "unique_experiment_reference": {},
    "resource_score": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {},
    "max_phase_for_disease" : {},
    "urls": {},
	"status": {}
  },
  "required": [
    "resource_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes",
    "max_phase_for_disease"
  ],
  "additionalProperties": false
}
