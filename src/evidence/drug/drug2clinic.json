{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "drug_disease_clinical_evidence",
  "description": "Evidence linking drug to disease in a clinical trial",
  "type": "object",
  "version": "1.2.1",
  "allOf": [
    {
      "$ref": "evidence/base.json"
    },
    {
      "properties": {
        "evidence_codes": {
          "type": "array",
          "description": "An array of evidence codes",
          "items": {
            "type": "string",
            "enum": [
              "http://identifiers.org/eco/drug_disease",
              "http://purl.obolibrary.org/obo/ECO_0000205"
            ]
          },
          "minItems": 1
        },
        "max_phase_for_disease": {
          "type" : "object",
          "$ref" : "evidence/drug/diseasephase.json"
        },
        "urls": {
          "type": "array",
          "items": {
            "type" : "object",
            "$ref": "evidence/linkout/linkout.json"
          }
        }
      }
    }
  ],
  "properties": {
    "unique_experiment_reference": {},
    "association_score": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {},
    "max_phase_for_disease" : {},
    "urls": {}
  },
  "required": [
    "association_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes",
    "max_phase_for_disease"
  ],
  "additionalProperties": false
}
