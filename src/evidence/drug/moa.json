{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "drug_mechanism_of_action_evidence",
  "description": "Mechanism of action evidence linking gene/protein to drug",
  "type": "object",
  "version": "1.2",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/base.json"
    }
  ],
  "properties": {
    "allOf": {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/base.json"
    },
    "association_score": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {
      "type": "array",
      "description": "An array of evidence codes",
      "items": {
        "type": "string",
        "enum": [
            "http://identifiers.org/eco/target_drug",
            "http://purl.obolibrary.org/obo/ECO_0000205"
        ]
      },
      "minItems": 1
    }
  },

    "mechanism_of_action": {
      "type": "string"
    },
    "action_type": {
      "type": "string"
    }
  
  
  "patternProperties": {
    "^preferred_hyperlink_[1-9]$": {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/linkout.json"
    }
  },
  "required": [
    "association_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes",
    "mechanism_of_action",
    "action_type"    
  ],
  "additionalProperties": false
}