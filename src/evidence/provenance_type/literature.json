{
  "type": "object",
  "properties": {
    "literature": {
      "type": "object",
      "properties": {
        "references": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "pattern": "http://identifiers.org/pubmed/[0-9]+|http://europepmc.org/articles/PMC[0-9]{4,}$"
              },
              "score": {
                "type": "object",
                "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/association_score/rank.json"
              },
              "mined_sentences": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minItems": 1
                }
              }
            },
            "minItems": 1,
            "uniqueItems": true
          }
        }
      },
      "required": [
        "references"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "literature"
  ],
  "additionalProperties": false,
  "import_remote_schemas": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/association_score/method.json"
    }    
  ]  
}