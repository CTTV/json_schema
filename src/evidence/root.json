{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Evidence_Root",
  "description": "Root schema for CTTV evidence",
  "version": "1.2",
  "type": "object",
  "properties": {
    "association_score": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/pvalue"
          },
          {
            "$ref": "#/definitions/probability"
          },
          {
            "$ref": "#/definitions/rank"
          }
        ]
      }
    },
    "provenance_type": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/expert"
          },
          {
            "$ref": "#/definitions/literature"
          },
          {
            "$ref": "#/definitions/database"
          }
        ]
      }
    },
    "is_associated": {
      "type": "boolean"
    },
    "date_asserted": {
      "type": "string",
      "format": "date-time"
    }
  },
  "definitions": {
    "pvalue": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "pvalue"
          ]
        },
        "value": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "method": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "value",
        "method"
      ]
    },
    "probability": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "probability"
          ]
        },
        "value": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "method": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "value",
        "method"
      ]
    },
    "rank": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "rank"
          ]
        },
        "rank_position": {
          "type": "number",
          "minimum": 1
        },
        "sample_size": {
          "type": "number",
          "minimum": 1
        },
        "method": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "value",
        "method"
      ]
    },
    "expert": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "expert"
          ]
        },
        "statement": {
          "type": "string"
        },
        "author": {
          "type": "object",
          "properties": {
            "organization": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "status": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "status"
      ],
      "additionalProperties": false
    },
    "literature": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "literature"
          ]
        },
        "lit_refs": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "http://identifiers.org/pubmed/[0-9]+|http://identifiers.org/pmc/PMC[0-9]{4,}$",
            "minItems": 1,
            "uniqueItems": true
          }
        },
        "extracted_sentences": {
          "type": "array",
          "items": {
            "type": "string",
            "minItems": 1
          }
        }
      },
      "required": [
        "type",
        "lit_refs"
      ],
      "additionalProperties": false
    },
    "database": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "database"
          ]
        },
        "dbxref": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Please provide the original DB name"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Please provide a pointer to the original resource: e.g. http://identifiers.org/orphanet/93298"
            },
            "version": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "id",
            "version"
          ]
        },
        "id": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "id",
        "version"
      ]
    },
    "linkout": {
      "type": "object",
      "properties": {
        "nice_name": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false,
      "required": [
        "nice_name",
        "url"
      ]
    }
  }
}