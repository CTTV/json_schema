{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "snp_gwas_disease_evidence",
  "description": "Evidence linking SNP to disease in a GWAS study",
  "type": "object",
  "version": "1.2.1",
  "allOf": [
    {
      "$ref": "evidence/base.json"
    },
    {
      "properties": {
        "allOf": {
          "$ref": "evidence/base.json"
        },
        "gwas_panel_resolution": {
          "description": "Panel resolution of GWAS study",
          "type": "number",
          "minimum": 1
        },
        "gwas_sample_size": {
          "description": "Sample size of GWAS study",
          "type": "number",
          "minimum": 1
        },
        "evidence_codes": {
          "type": "array",
          "description": "An array of evidence codes",
          "items": {
            "type": "string",
            "enum": [
              "http://identifiers.org/eco/GWAS",
              "http://purl.obolibrary.org/obo/ECO_0000205"
            ]
          },
          "minItems": 1
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "evidence/linkout/linkout.json"
          }
        }
      }
    }
  ],
  "properties": {
    "association_score": {},
    "unique_experiment_reference": {},
    "provenance_type": {},
    "is_associated": {},
    "date_asserted": {},
    "evidence_codes": {},
    "urls": {},
    "gwas_panel_resolution": {},
    "gwas_sample_size": {}
  },
  "required": [
    "unique_experiment_reference",
    "association_score",
    "provenance_type",
    "is_associated",
    "date_asserted",
    "evidence_codes"
  ],
  "additionalProperties": false
}