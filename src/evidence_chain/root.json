{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Evidence_Chain_Root",
  "description": "A generic schema describing the valid objects in an evidence chain (an array). Must be subclassed with additional properties to be meaningful.",
  "version": "1.2",
  "type": "object",
  "properties": {
    "type_of": {
      "type": "string"
    },
    "chain": {
      "type": "array",
      "items": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/target.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/root.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/disease.json"
        }
      ],
      "minItems" : 3
    }
  },
  "additionalProperties": false,
  "required": [
    "type_of",
    "chain"
  ],
  "remote_schemas": {
  	"bioentities": {
  		"$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/bioentities.json"
  	}
  }
}