{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Expression evidence chain",
  "description": "CTTV expression evidence chain",
  "version": "1.2",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/generic.json"
    }
  ],
  "properties": {
    "type": {
      "enum": [
        "expression_evidence_chain"
      ]
    },
    "chain": {
      "type": "array",
      "items": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/target.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/expression.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/disease.json"
        }
      ],
      "additionalItems": false
    }
  },
  "remote_schemas": [
    { "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/bioentities.json" },
    { "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/root.json" },
    { "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/linkout.json" }
  ]
}