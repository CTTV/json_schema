{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Target-disease association via drug",
  "description": "CTTV drugs MOA/clinical association evidence chain",
  "type": "object",
  "version": "1.2",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence_chain/root.json"
    }
  ],
  "properties": {
    "type_of": {
      "type": "string",
      "default": "drug"
    },
    "chain": {
      "type": "array",
      "items": [
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/target.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/drug/moa.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/drug.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/evidence/drug/clinical.json"
        },
        {
          "$ref": "https://raw.githubusercontent.com/CTTV/json_schema/master/src/bioentity/disease.json"
        }
      ],
      "additionalItems": false
    }
  },
  "additionalProperties": false
}